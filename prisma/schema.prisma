generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Link {
  id                    String     @id @default(auto()) @map("_id") @db.ObjectId
  Baslik                String
  Link                  String  @unique
  Ziyaret_Edildi        Boolean @default(false)
  Ziyaret_Ediliyor      Boolean @default(false)
  Kira                  Int?
  Fotograf              String?
  Olusturuldugu_Tarih   DateTime @default(now())
  Guncellendigi_Tarih   DateTime @updatedAt
}

model Property {
  id                    String     @id @default(auto()) @map("_id") @db.ObjectId
  Link                  String  @unique
  Ilan_no               String  @unique
  Baslik                String
  Fiyat                 Int?
  Fotograf              String?
  Son_Guncelleme_Tarihi String
  Ilan_Durumu           String
  Konut_Tipi            String
  Konut_Sekli           String
  Oda_Sayisi            String
  Brut_m2               Int
  Net_m2                Int
  Bulundugu_Kat_Tipi    String?
  Bulundugu_Kat_Numarasi   Int?
  Bina_Yasi             Int?
  Isinma_Tipi           String
  Kat_Sayisi            Int
  Esya_Durumu           String
  Banyo_Sayisi          Int
  Yapi_Tipi             String
  Yapinin_Durumu        String
  Kullanim_Durumu       String
  Aidat                 Int
  Cephe                 String
  Depozito              Int
  Yakit_Tipi            String
  Yetkili_Ofis          String
  Sehir                 String
  Ilce                  String
  Mahalle               String
}
